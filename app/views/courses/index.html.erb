<% unless notice.blank?%> 
  <div class="alert alert-success" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
<%end%>

<div class="panel panel-default">
  <div class="panel-heading">Curso</div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover table-condensed">
          <thead>
           <tr>
            <th>Name</th>
            <th>Descrição</th>
            <th>Status</th>
            <th colspan="3"></th>
           </tr>
          </thead>
         <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td><%= course.name %></td>
              <td><%= course.description %></td>
              <td><%= course.status.titleize%></td>

              <td align='right'>
                    <%= link_to course, class: "btn btn-default btn-sm" do %>
                      <span style="color:green" class="glyphicon glyphicon-list-alt"></span> Exibir
                  <% end %>
                  <%= link_to edit_course_path(course), class: "btn btn-default btn-sm" do %>
                    <span style="color:blue" class="glyphicon glyphicon-pencil"></span> Editar
                  <% end %>
                  <%= link_to course, method: :delete, data: { confirm: 'Deseja excluir o registro?' }, class: "btn btn-default btn-sm" do %>
                          <span  style="color:red"  class="glyphicon glyphicon-trash"></span> Excluir
                  <% end %>
                </td>

              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
   <br>
  </div>
</div>

<%= link_to new_course_path, class: "btn btn-default btn-sm" do %>
     <span style="color:green" class="glyphicon glyphicon-plus"></span> Novo
<% end %>
