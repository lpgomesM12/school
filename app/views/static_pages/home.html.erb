<div class="panel panel-default">
  <div class="panel-heading"></div>
   <div class="panel-body">
    <div class="row">
      <div class="col-lg-6">
        <button class="btn btn-primary" type="button">
          Alunos na Escola <span class="badge"> <%=@students%></span>
         </button>
       </div>
       <div class="col-lg-6">

         <div class="panel panel-default">
            <div class="panel-body">
               <div class="table-responsive">
               <table class="table table-hover table-condensed">

                 <thead>
                   <tr>
                     <th>Curso</th>
                     <th>N° de Matrículas</th>
                   </tr>
                 </thead>
                 <tbody>
                   <% @courses.each do |course| %>
                     <tr>
                       <td><%= course.name %></td>
                       <td><%= Classroom.where(course_id: course).count %></td>
                       </tr>
                       <% end %>
                   </tbody>
                </table>
              </div>
             </div>
         </div>
       </div>
     </div>
 </div>
</div>
