<% unless notice.blank?%> 
  <div class="alert alert-success" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
<%end%>

<div class="panel panel-default">
  <div class="panel-heading">Aluno</div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover table-condensed">
          <thead>
           <tr>
           <th>Nome</th>
           <th>NÂ° Registro</th>
           <th>Status</th>
           <th colspan="3"></th>
          </tr>
         </thead>
         <tbody>
          <% @students.each do |student| %>
           <tr>
           <td><%= student.name %></td>
           <td><%= student.register_number %></td>
           <td><%= student.status.titleize%></td>
           <td align='right'>
              <%= link_to student, class: "btn btn-default btn-sm" do %>
                <span style="color:green" class="glyphicon glyphicon-list-alt"></span> Exibir
            <% end %>
            <%= link_to  edit_student_path(student), class: "btn btn-default btn-sm" do %>
              <span style="color:blue" class="glyphicon glyphicon-pencil"></span> Editar
            <% end %>
            <%= link_to student, method: :delete, data: { confirm: 'Deseja excluir o registro?' }, class: "btn btn-default btn-sm" do %>
                    <span  style="color:red"  class="glyphicon glyphicon-trash"></span> Excluir
            <% end %>
            </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><br>
  </div>
</div>

<%= link_to new_student_path, class: "btn btn-default btn-sm" do %>
      <span style="color:green" class="glyphicon glyphicon-plus"></span> Novo
<% end %>
